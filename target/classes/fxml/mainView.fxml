<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane fx:id="pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.nsu.projects.malaeva.MainController">
  <VBox>
    <VBox fx:id="vbox" alignment="TOP_CENTER">
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
    </VBox>
      <ButtonBar>
        <padding>
          <Insets bottom="20.0" left="20.0" right="20.0"/>
        </padding>
        <buttons>
            <Button mnemonicParsing="false" focusTraversable="false" onAction="#addAnyQuantifier" text="∀"/>
            <Button mnemonicParsing="false" focusTraversable="false" onAction="#addExistQuantifier" text="∃" />
            <Button mnemonicParsing="false" focusTraversable="false" onAction="#addDisjunction" text="v" />
            <Button mnemonicParsing="false" focusTraversable="false" onAction="#addConjunction" text="∧" />
            <Button mnemonicParsing="false" focusTraversable="false" onAction="#addImplication" text="→" />
        </buttons>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      </ButtonBar>
   <HBox spacing="10.0" alignment="CENTER_RIGHT">
       <padding>
           <Insets right="20.0" bottom="20"/>
       </padding>
          <Button minWidth="34.0" mnemonicParsing="false" style="-fx-background-color: #9191ff;" onAction="#addNewRow" prefHeight="27.0" prefWidth="103.0" text="Add field" />
          <Button graphicTextGap="5.0" mnemonicParsing="false" onAction="#buildGraph" prefHeight="27.0" prefWidth="106.0" text="Build graph" />
   </HBox>
  </VBox>
</Pane>
